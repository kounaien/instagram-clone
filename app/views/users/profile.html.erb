<div class="container">
    <div class="row">
        <div class="col-4 profile-img">
            <%= profile_picture(@user, 200 )%>
        </div>
        <div class="col-8 text-left"> 
            <div class="row">
                <div class="col-6">
                    <h1><%= @user.full_name %></h1>
                    <%= link_to "Edit Page", edit_user_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@user.id) %>
                </div>
            </div>


            <div class="row profile-stats">
                <div class="col-4">
                    <%= @user.posts.count %> posts
                </div>
                <div class="col-4">
                    <%= @user.total_followers %> followers
                </div>
                <div class="col-4">
                    <%= @user.total_following %> following
                </div>
            </div>


            <p><%= @user.full_name %></p>
            <%= simple_format @user.description %>
            <p><%= link_to @user.website if @user.website.present? %></p>
        </div>
    </div>

<div class="row profile-posts">
    <% @posts.each do |post|%>
        <div class="col-4">
            <div class="insta-post post-square" style="background: url(<%= post.image.url %>) no-repeat center top">
                <%= link_to post_path(post) do %>
                    <div class="post-stats">
                        <div class="inner">
                            <i class="fa fa-heart"></i> <%= post.total_likes_count %> 
                            <i class="fa fa-comment m-l-15"></i> <%= post.total_comments_count %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
