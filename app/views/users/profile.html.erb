<div class="container">
    <div class="row">
        <div class="col-4 profile-img">
            <%= profile_picture(@user, 200 )%>
        </div>
        <div class="col-8 text-left"> 
            <div class="row">
                <div class="col-6">
                    <h1><%= @user.full_name %></h1>
                    <%= link_to "Edit Page", edit_user_registration_path, class: "btn btn-muted btn-custom float-right" if can_edit_profile?(@user.id) %>
                </div>
            </div>


            <div class="row profile-stats">
                <div class="col-4">
                    <%= @user.posts.count %> posts
                </div>
                <div class="col-4">
                    <%= @user.total_followers %> followers
                </div>
                <div class="col-4">
                    <%= @user.total_following %> following
                </div>
            </div>


            <p><%= @user.full_name %></p>
            <%= simple_format @user.description %>
            <p><%= link_to @user.website if @user.website.present? %></p>
        </div>
    </div>

<div class="row">
    <% @posts.each do |post|%>
        <div class="col-4">
            <div class="insta-post">
                <%= image_tag post.image.url, class: "img img-fluid" %>
            </div>
        </div>
    <% end %>
</div>
