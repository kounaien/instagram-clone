<div class="container">
    <div class="row">
        <div class="col-4">
            <%= image_tag @user.image.url, width: "200px", class: "img-rounded", fallback: "no_image.jpg" %>
        </div>
        <div class="col-8 text-left"> 
            <h1><%= @user.full_name %></h1>
            <%= link_to "Edit Page", edit_user_registration_path, class: "btn btn-secondary" %>
            <div class="profile-status"><%= @user.posts.count %> posts</div>
            <div class="profile-status"><%= @user.total_followers %> followers</div>
            <div class="profile-status"><%= @user.total_following %> following</div>
        </div>
    </div>
</div>
