<div class="container">
    <div class="row">
        <div class="col-4">
            <%= image_tag @user.image.url, width: "200px", class: "img-rounded", fallback: "no_image.jpg" %>
        </div>
        <div class="col-8 text-left"> 
            <h1><%= @user.full_name %></h1>
            <%= link_to "Edit Page", edit_user_registration_path, class: "btn btn-secondary" %>
            <div class="profile-stats"><%= @user.posts.count %> posts</div>
            <div class="profile-stats"><%= @user.total_followers %> followers</div>
            <div class="profile-stats"><%= @user.total_following %> following</div>

            <p><%= @user.full_name %></p>
            <%= simple_format @user.description %>
            <p><%= link_to @user.website if @user.website.present? %></p>
        </div>
    </div>

<div class="row">
    <% @posts.each do |post|%>
        <div class="col-4">
            <div class="insta-post">
                <%= image_tag post.image.url, class: "img img-fluid" %>
            </div>
        </div>
    <% end %>
</div>
